{
    "name": "iberbanco/php-sdk",
    "description": "Production-ready PHP SDK for Iberbanco API v2 - Enterprise banking platform with 80+ currencies, professional enums, type-safe DTOs, optimized performance, and comprehensive financial services",
    "type": "library",
    "keywords": ["iberbanco", "banking", "api", "sdk", "financial", "payments", "transactions", "swift", "sepa", "ach", "multicurrency", "crypto", "fintech", "enums", "dto", "type-safe", "production", "optimized"],
    "homepage": "https://iberbancoltd.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Iberbanco Ltd",
            "email": "info@iberbancoltd.com",
            "homepage": "https://iberbancoltd.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.0",
        "ext-json": "*",
        "ext-hash": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.5",
        "phpstan/phpstan": "^1.8",
        "squizlabs/php_codesniffer": "^3.7",
        "vlucas/phpdotenv": "^5.4"
    },
    "autoload": {
        "psr-4": {
            "Iberbanco\\SDK\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Iberbanco\\SDK\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "analyse": "phpstan analyse src --level=8",
        "cs-check": "phpcs src --standard=PSR12",
        "cs-fix": "phpcbf src --standard=PSR12"
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
} 